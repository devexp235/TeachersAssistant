
@{
    ViewBag.Title = "Download Paid Documents";
    Layout = "~/Areas/Grammar11Plus/Views/Shared/_LayoutGrammar11Plus.cshtml";
}
<div class="form-horizontal">
    <h2>Download Paid Documents</h2>
    <div style="background-color: #DADADA;">
            <div style="padding:5px;">
                <ul id="paidDocs"></ul>
                <div><hr style="text-align:center; width:69%;" /></div>
                <ul id="paidVids"></ul>
            </div>
        </div>
    </div>
        <script type="text/javascript">
            $(document).ready(function () {
                var jsonpaidDocs = @Html.Raw(Json.Encode(ViewBag.PaidDocumentsLists));
                var $ulHandleDocs = $('ul#paidDocs');
                for(var doc=0; doc<jsonpaidDocs.length; doc++ ){
                    $ulHandle.append('<li><a href='+jsonpaidDocs[docs]+'>'+jsonpaidDocs[docs].Description+'</li>');
                }

                var jsonpaidVids = @Html.Raw(Json.Encode(ViewBag.PaidVideosLists));
                var $ulHandleVids = $('ul#paidVids');
                for(var doc=0; doc<jsonpaidVids.length; doc++ ){
                    $ulHandle.append('<li><a href='+jsonpaidVids[docs]+'>'+jsonpaidVids[docs].Description+'</li>');
                }
            });
        </script>
