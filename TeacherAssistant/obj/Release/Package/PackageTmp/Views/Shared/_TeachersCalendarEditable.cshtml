@using System.Web.Mvc.Html
<div>
    <link rel="stylesheet" type="/calendar/js/text/css" href="/calendar/css/calendar.css">
    <p>
        <h4 id="title"></h4>
    </p>
    <p>
        <div id="calendar" style="background-color:dodgerblue; width:auto;margin:10px;padding:5px;color:white;">

        </div>
    </p>
</div>
<script>
    $('#calendar').calendar();

    $('#calendar').calendar({months: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
        days: ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'],
        daysMin: ['SUN', 'MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT'],
        dayLetter: ['S', 'M', 'T', 'W', 'T', 'F', 'S'],
        date:new Date()
    });
</script>